{
  "name": "servicemonitor",
  "version": "1.0.0",
  "description": "A Webservice that checks the status of server Service. Implemented with nodejs and powershell",
  "main": "index.js",
  "scripts": {
    "start:dev": "set NODE_ENV=DEVELOPMENT&& nodemon ./server/index.js --exec babel-node --require dotenv/config",
    "start": "set NODE_ENV=PRODUCTION&& npm run build && node ./dist/index.js",
    "build": "babel server -d dist --require dotenv/config",
    "test": "set NODE_ENV=TEST&& nyc mocha server/test/test.js --compilers js:babel-core/register --timeout 20000 --exit",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlesinto/ServiceMonitor.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charlesinto/ServiceMonitor/issues"
  },
  "homepage": "https://github.com/charlesinto/ServiceMonitor#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "child_process": "^1.0.2",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "express": "^4.16.3",
    "http": "0.0.0",
    "nodemon": "^1.18.4",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "dotenv": "^6.0.0",
    "mocha": "^5.2.0",
    "socket.io": "^2.1.1"
  }
}
